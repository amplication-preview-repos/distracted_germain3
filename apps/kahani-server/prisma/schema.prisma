datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reel {
  createdAt   DateTime @default(now())
  createdBy   String?
  creator     String?
  description String?
  duration    Int?
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String?
  updatedAt   DateTime @updatedAt
}

model TextInput {
  associatedReel String?
  content        String?
  createdAt      DateTime @default(now())
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  reelReference  String?
  updatedAt      DateTime @updatedAt
}

model Customization {
  associatedReel    String?
  backgroundMusic   Json?
  createdAt         DateTime                       @default(now())
  id                String                         @id @default(auto()) @map("_id") @db.ObjectId
  reelCustomization String?
  theme             EnumCustomizationTheme?
  transitions       EnumCustomizationTransitions[]
  updatedAt         DateTime                       @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumCustomizationTheme {
  Option1
}

enum EnumCustomizationTransitions {
  Option1
}
